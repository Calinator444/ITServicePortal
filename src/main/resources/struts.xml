<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts
Configuration 2.5//EN" "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    <constant name="struts.devMode" value="true"/>
    <constant name="struts.action.extension" value="action" />

    <!-- STRUTS2 groups actions into packages. A package may have a URL prefix -->
    <package name="default" extends="struts-default">
        <interceptors>
            <interceptor name="loginDetails" class="classes.LoginDetailsInterceptor"/>
            <interceptor-stack name="myStack">
                <interceptor-ref name="loginDetails"/>
            </interceptor-stack>
        </interceptors>

        <action name="ViewIssue" class="classes.IssueViewAction">
            <result name="success">
                /ViewIssue.jsp
            </result>
            <result name="error">
                /ViewIssue.jsp
            </result>
        </action>
        <action name="IssueReporting">
            <interceptor-ref name="myStack"></interceptor-ref>
            <result name="success">
                /IssueReporting.jsp
            </result>
        </action>
        <action name="SubmitIssue" class="classes.SubmitAction">
            <result name="success">
                /IssueReporting.jsp
            </result>
            <result name="error">
                /IssueReporting.jsp
            </result>
        </action>

        <action name="ViewIssue" class="classes.IssueViewAction">
            <result name="success">
                /ViewIssue.jsp
            </result>
            <result name="error">
                /ViewIssue.jsp
            </result>
        </action>

        <action name="SubmitIssue" class="classes.SubmitAction">
            <result name="success">
                /IssueReporting.jsp
            </result>
            <result name="error">
                /IssueReporting.jsp
            </result>
        </action>
        <action name="Login">
            <result name="success">/Login.jsp</result>
        </action>
        <action name="Home">
            <result name="success">Home.jsp</result>
        </action>
        <action name="loginAction" class="classes.LoginAction">
            <result name="user_dashboard">/User.jsp</result>
            <result name="it_staff_dashboard">/Staff.jsp</result>
            <result name="it_manager_dashboard">/Manager.jsp</result>
        </action>



    </package>
</struts>